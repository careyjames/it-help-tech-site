modules = ["web", "nodejs-20", "python-3.12"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["zola"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Zola Dev Server"

[[workflows.workflow]]
name = "Zola Dev Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "zola serve --interface 0.0.0.0 --port 5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 1024
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "static"
build = ["zola", "build"]
publicDir = "public"
